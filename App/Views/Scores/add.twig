{% extends "/layout.twig" %}

{% block content %}
    <section class="subject__add">
        <div class="container">
            <div class="col-6 offset-3">
                <div class="row">
                    <h3 class="text-center mt-5">Выставить оценку</h3>
                    {{ flasher.display }}
                    <form action="/scores/store" method="POST">
                        <div class="mb-3  pt-5 row">
                            <label for="student" class="col-sm-6 col-form-label">Студент</label>
                            <div class="col-sm-10">
                                <select name="student" class="form-select">
                                    {% for student in students %}
                                        <option value="{{ student.id }}">{{ student.full_name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="mb-3  pt-5 row">
                            <label for="subject" class="col-sm-6 col-form-label">Предмет</label>
                            <div class="col-sm-10">
                                <select name="subject" class="form-select">
                                    {% for subject in subjects %}
                                        <option value="{{ subject.id }}">{{ subject.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="mb-3  pt-5 row">
                            <label for="subject" class="col-sm-6 col-form-label">Оценка</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" min="1" max="100" name="score">
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Добавить</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}