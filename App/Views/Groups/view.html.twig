{% extends "/layout.html.twig" %}

{% block content %}
    <section class="groups__list">
        <div class="container">
            <div class="col-6 offset-3">
                <div class="row pt-5">
                    {{ flasher.display }}
                    <table class="table">
                        <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Группа</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for group in groups  %}
                            <tr>
                                <th scope="row">{{ group.id }}</th>
                                <td>{{ group.name }}</td>
                                <th>
                                    <a href="/groups/{{ group.id }}/edit" class="btn btn-primary" data-bs-toggle="tooltip" title="Изменить"><i class="lni lni-pencil"></i></a>
                                    <a href="/groups/{{ group.id }}/remove" class="btn btn-danger"  data-bs-toggle="tooltip" title="Удалить"><i class="lni lni-trash-can"></i></a>
                                </th>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="/groups/add" class="btn btn-primary">Добавить группу</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}